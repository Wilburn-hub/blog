# ===========================================
# 生产环境配置示例
# 复制此文件为 .env 并填入实际值
# ===========================================

# 数据库配置
DATABASE_URL="postgresql://postgres:your_secure_password@localhost:5432/personal_blog"
POSTGRES_DB=personal_blog
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Redis配置
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=your_redis_password_here

# NextAuth配置
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters_long

# JWT配置
JWT_SECRET="your-jwt-secret-key-minimum-32-characters-long"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-minimum-32-characters-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# OAuth提供商 (可选)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_ID=""
GITHUB_SECRET=""

# 邮件配置 (用于通知和密码重置)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"
EMAIL_FROM="noreply@yourdomain.com"

# 文件上传配置
UPLOAD_MAX_SIZE="5242880"  # 5MB in bytes
UPLOAD_DIR="public/uploads"

# 云存储配置 (可选)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# 分析工具配置 (可选)
GOOGLE_ANALYTICS_ID=""
VERCEL_ANALYTICS_ID=""

# 安全配置
CORS_ORIGIN="https://yourdomain.com"
RATE_LIMIT_WINDOW_MS="900000"  # 15分钟
RATE_LIMIT_MAX_REQUESTS="100"

# 应用配置
NODE_ENV="production"
PORT=3000
NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# 备份配置
BACKUP_SCHEDULE="0 2 * * *"  # 每天凌晨2点
BACKUP_RETENTION_DAYS=30